---
layout: layout.njk
pagination:
  data: collections.all
  size: 10
  reverse: true
  alias: posts
---
{% for post in posts %}
  <article>
    <h1>
      <a href="{{ post.url | url }}">{{ post.data.title }}</a>
    </h1>
    <time datetime="{{ post.date | dateIso }}">{{ post.date | dateReadable }}</time>
    <div>{{ post.data.excerpt }}</div>
    <a href="{{ post.url | url }}"
      aria-label="Read more on {{ post.data.title }}">Read more</a>
  </article>
{% endfor %}